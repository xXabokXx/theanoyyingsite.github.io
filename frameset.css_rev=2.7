/* General styles */
body {
  margin: 0;
  padding: 0;
  border: 0;
}

/* Header styles */
#header {
  background: #f9f9f9 url(../images/bg.gif) repeat-x;
  clear: both;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

/* column container */
.colmask {
  position: relative;
  /* This fixes the IE7 overflow hidden bug and stops the layout jumping out of place */
  clear: both;
  float: left;
  width: 100%; /* width of whole page */
  /* overflow: hidden; This chops off any overhanging divs */
  top: 101px;
}

/* 2 column left menu settings */
.leftmenu {
}

.leftmenu .colright {
  float: left;
  position: relative;
  left: 200px;
}

.leftmenu .col1wrap {
  float: right;
  width: 50%;
  position: relative;
  right: 200px;
  padding-bottom: 1em;
}

.leftmenu .col1 {
  margin-left: 15px;
  position: relative;
}

.leftmenu .col2 {
  float: left;
  width: 170px;
  position: absolute;
  left:-185px;
  top:0;
}

/* Footer styles */
#footer {
  clear: both;
  float: left;
  width: 100%;
  border-top: 0 solid #CCCCCC;
  margin-top: 102px;
  height: 80px;
}

#footer p {
  text-align: center;
}
